<%= render "partials/header" %>
  <div id="page">
   <div id="page-bgtop">
    <div id="page-bgbtm">
     <div id="content">
     <!-- flashes -->
      <div class="flash-message">
        <% flash.each do |key,value| %>
          <% if key == 'notice'%>
            <p id="flash-notice"><%= value %></p>
          <% else %>
            <p id="flash-error"><%= value %></p>
          <% end %>
        <% end %>
      </div>
      <!-- main post view -->
      <%= yield %> 
      <div style="clear: both;">&nbsp;</div>
     </div>
     <!-- end #content -->
     <%= render "partials/sidebar" %>
     <div style="clear: both;">&nbsp;</div>

    </div>
   </div>
  </div>
  <!-- end #page-->
  <div id="footer">
   <p></p>
  </div>
  <!-- en #footer-->
 </div>
 <!-- end #wrapper-->



  </body>
</html>
