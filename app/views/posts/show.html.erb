<div class="post">
	<h2 class="title"><%= @post.title %></h2>
	<small><%= @post.created_at.strftime("%b %d. %Y") %></small>
	<%= "| Created by: #{@post.admin_user.name}" %> 
	<div class="entry">
		<p><%= @post.body %></p>
	</div>
	<p>Category: <%= link_to @post.category.name, category_path(id: @post.category.id) %></p>

<!-- Comments -->
	<hr>
	<%= render partial: 'partials/comment', collection: @post.comments.order(created_at: :desc) %>
<!-- Comments form -->
	<hr>
	<h3>ADD A COMMENT:</h3>
	<%= form_for @comment do |f| %>
		<%= f.hidden_field :post_id %>
		<p>
			<%= f.label :name %><br />
			<%= f.text_field :name %>
		</p>
		<p>
			<%= f.label :body %><br />
			<%= f.text_area :body %>
		</p>
		<p>
			<%= f.submit "Submit" %>
		</p>
	<% end %>
</div>


